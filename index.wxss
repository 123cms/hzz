  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 35rpx;
  padding: 0;
}

.action-btn:first-child {
  margin-left: 0;
}

.action-btn:last-child {
  margin-right: 0;
}

.action-btn[disabled] {
  background-color: #9be6b4;
  color: #fff;
}

.btn-text {
  font-size: 28rpx;
}

/* 错误提示样式 */
.error-message {
  padding: 40rpx;
  text-align: center;
  color: #ff4d4f;
  font-size: 28rpx;
}

/* 连接按钮样式 */
.action-btn.connected {
  background-color: #ff4d4f;  /* 已连接状态显示红色 */
}

/* 禁用状态的按钮样式 */
.action-btn[disabled] {
  background-color: #9be6b4;
  color: #fff;
}